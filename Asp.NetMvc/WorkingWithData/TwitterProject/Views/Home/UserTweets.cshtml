@model IList<TwitterProject.ViewModels.TweetViewModel>

@{
    ViewBag.Title = "UserTweets";
}

<h2><strong>@Model.First().UserName</strong> tweets</h2>

@foreach (var tweet in @Model)
{
    <div>
        <p><strong>@tweet.UserName</strong> sad:</p>
        <p>@tweet.Text</p>
        <p>on : <strong>@tweet.DatePosted</strong></p>
    </div>
}

